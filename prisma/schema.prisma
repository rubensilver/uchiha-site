datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Log {
  id        Int      @id @default(autoincrement())
  type      String
  message   String
  createdAt DateTime @default(now())
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  password String
  role     String   // admin | operador
  createdAt DateTime @default(now())
}

model Message {
  id        Int      @id @default(autoincrement())
  to        String
  content   String
  direction String   // sent | received
  createdAt DateTime @default(now())
}
