// prisma/schema.prisma
datasource db {
  provider = "sqlite" // ou "postgresql" para produção
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Log {
  id        Int      @id @default(autoincrement())
  level     String
  message   String
  meta      Json?
  createdAt DateTime @default(now())
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  role      String
  createdAt DateTime @default(now())
}

model Message {
  id        Int      @id @default(autoincrement())
  to        String
  content   String
  direction String
  createdAt DateTime @default(now())
}
